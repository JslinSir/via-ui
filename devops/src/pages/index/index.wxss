}

.copyright{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #ccc;
  font-size: 24rpx;
  padding-top: 30rpx;
  padding-bottom: 260rpx;

}

.freshloading {
  background: linear-gradient(90deg, #0a1d66 25%, red 37%, green 63%);
  background-size: 400% 100%;
  font-size: 32rpx;
  -webkit-background-clip: text;
  color: transparent;

}
.freshloading-run{
  animation: sketelonloading 1.4s ease infinite
}

@keyframes sketelonloading {
  0% {
    background-position: 100% 50%
  }

  100% {
    background-position: 0 50%
  }
}




