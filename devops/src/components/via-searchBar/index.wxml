<view class="wrapper" style="height:{{height}}rpx;width:{{width}}rpx;">
	<view class="bg" style="border-radius:{{radius}}rpx">
		<via-icon class="icon-search" name="search" wx:if="{{showSearchIcon}}" />
		<view wx:if="{{carousel}}" class="carousel-view">
			<via-carouselText speed="2" height="40"  text="{{carouselText}}" direction="column" class-hot-item="scroll-text"/>
		</view>
		<block wx:else>
			<input
			 class="input"
			 disabled="{{disabled}}"
			 type="text"
			 value="{{value}}"
			 placeholder="{{placeholder}}"
			 placeholder-style="color:{{placeholderColor}};"
			 maxlength="{{maxlength}}"
			 focus="{{focus}}"
			 confirm-type="search"
			 bindinput="handleInput"
			 bindconfirm="handleSearch"
			 bindfocus="handleFocus"
			 bindblur="handleBlur"
			/>
		</block>

		<icon
		 class="icon-clear"
		 type="clear"
		 size="14"
		 bind:tap="handleClear"
		 hidden="{{!showClear || !clearIconVisible}}"
		/>
	</view>
	<text class="btn-cancel class-search-text" bind:tap="handleClickSearchText" wx:if="{{searchText}}">{{searchText}}</text>
</view>

