<view class="mp-tab-box">
	<block wx:if="{{tabs.length>5}}">
		<scroll-view
		 class="mp-scroll-view-box"
		 scroll-x="true"
		 scroll-with-animation="true"
		 scroll-left='{{transformX}}'
		>
			<view class="mp-tab-row class-tab">
				<block wx:for="{{tabs}}" wx:key="unique">
					<view
					 class="mp-tab-item {{index==curentIndex?'class-active-tab':''}}"
					 style="width:{{100/tabs.length}}%;color:{{index==curentIndex?selectColor:''}}"
					 data-index="{{index}}"
					 bind:tap="handleTabClick"
					>
						<text >{{item.title}}</text>
						<view wx:if="{{index==curentIndex}}" class="line active class-line" style="background-color:{{selectColor}}" />
					</view>

				</block>
			</view>
		</scroll-view>
	</block>
	<view class="mp-tab-row class-tab" wx:else>
		<block wx:for="{{tabs}}" wx:key="unique">
			<view
			 class="mp-tab-item {{index==curentIndex?'class-active-tab':''}}"
			 style="width:{{100/tabs.length}}%;color:{{index==curentIndex?selectColor:''}}"
			 data-index="{{index}}"
			 bind:tap="handleTabClick"
			>
				<text >{{item.title}}</text>
				<view wx:if="{{index==curentIndex}}" class="line active class-line" style="background-color:{{selectColor}}" />
			</view>

		</block>
	</view>
</view>

