 .modal {
         position: fixed;
         top: 0;
         left: 0;
         z-index: 20;
         display: -webkit-box;
         display: -webkit-flex;
         display: flex;
         justify-content: center;

         align-items: center;
         width: 100%;
         height: 100%;
 }


 .modal-mask {
         position: fixed;
         top: 0;
         left: 0;
         background: rgba(0, 0, 0, 0.4);
         width: 100%;
         height: 100%;
         z-index: 99;
         transition: all 0.2s linear;
 }

 .modal-alert {
         display: -webkit-box;
         display: -webkit-flex;
         display: flex;

         flex-direction: column;

         align-items: center;

         justify-content: space-between;
         position: absolute;
         width: 540rpx;
         background: #FFF;
         border-radius: 24rpx;
         z-index: 99;
         font-size: 32rpx;

         transition: all 0.2s linear;
 }

 .modal-alert .content,
 .modal-alert .bottom,
 .modal-alert .cannel,
 .modal-alert .sure,
 .modal-alert .title {
         display: -webkit-box;
         display: -webkit-flex;
         display: flex;

         justify-content: center;

         align-items: center;
 }

 .modal-alert .title {
         width: 480rpx;
         font-size: 36rpx;
         color: #323232;
         font-weight: 500;
         margin-top: 40rpx;
 }

 .modal-alert .content {
         width: 480rpx;
         margin-top: 40rpx;
         margin-bottom: 80rpx;

         flex-direction: column;
         text-align: center;
 }

 .modal-alert .content-array {
         text-align: left;
 }

 .modal-alert .bottom {
         width: 100%;
         height: 98rpx;
         border-top: 1rpx solid #F2F2F2;

         transform: scale(1);
         font-weight: 500;
         display: -webkit-box;
         display: -webkit-flex;
         display: flex;

         justify-content: space-between;

         align-items: center;
 }

 .modal-alert .bottom .ripple {
         position: relative;
         overflow: hidden;
         width: 100%;
         height: 100%;
 }

 .modal-alert .bottom .ripple:nth-child(2) {
         border-left: 1rpx solid #F2F2F2;

         transform: scale(1);
 }

 .modal-alert .bottom .cancelWeight {
         font-weight: normal;
 }

 .ripple:after {
         content: "";
         display: block;
         position: absolute;
         width: 100%;
         height: 100%;
         top: 0;
         left: 0;
         pointer-events: none;
         background-image: -webkit-radial-gradient(circle, #666 10%, transparent 10.01%);
         background-image: radial-gradient(circle, #666 10%, transparent 10.01%);
         background-repeat: no-repeat;
         background-position: 50%;

         transform: scale(10, 10);
         opacity: 0;

         transition: opacity 0.5s, -webkit-transform 0.3s;
         transition: transform 0.3s, opacity 0.5s;
         transition: transform 0.3s, opacity 0.5s, -webkit-transform 0.3s;
 }

 .ripple:active:after {

         transform: scale(0, 0);
         opacity: 0.3;

         transition: 0s;
 }