.ad-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 90vh;
    width: 100vw;
}

.close-icon {
    margin-top: 40rpx;
}

.ad-content {
    position: relative;
}

.top-close-icon {
    position: absolute;
    top: -140rpx;
    right: -22rpx;
    z-index: 2;
}

.full-cotent {
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 9999;
}
.close-btn{
    position: absolute;
    background: rgba(0, 0, 0, 0.40);
    bottom: 60rpx;
    right: 30rpx;
    z-index: 1004;
    width: 127rpx;
    height: 60rpx;
    font-size: 28rpx;
    color: #fff;
    border-radius: 50rpx;
    line-height: 60rpx;
    text-align: center;
    z-index: 99999;
}