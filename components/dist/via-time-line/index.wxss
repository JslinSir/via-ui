.line-box{display:flex;flex-direction:column}.line-item{display:flex;flex-direction:column;margin-top:40rpx;padding-left:30rpx}.line-item:first-child{margin-top:0}.active{color:#ff574c}.radio-active{background-color:#fe473c}.title{font-size:32rpx;color:#999;position:relative}.radio{position:absolute;left:-49rpx;top:12rpx;width:18rpx;height:18rpx;border-radius:50%;background-color:#d8d8d8}.current-radio{position:absolute;left:-60rpx;top:4rpx;width:20rpx;height:20rpx;border-radius:50%;background-color:#fe473c;border-width:10rpx;border-style:solid;animation:actionscan 1s ease-in-out}.des{margin-top:12rpx;font-size:28rpx;color:#ccc}.draw-line{width:2rpx;background-color:#dadada;top:16rpx;position:absolute;left:-42rpx;z-index:-1;transition:height .4s ease-in-out}.draw-active-line{width:2rpx;background-color:#fe473c;top:16rpx;position:absolute;left:-42rpx;z-index:0;transition:height .3s ease-in-out}@keyframes actionscan{0%{transform:scale(0.8, 0.8)}50%{transform:scale(1.1, 1.1)}100%{transform:scale(1, 1)}}