
.pop-view {
    position: fixed;
    height: 100vh;
    top: 0;
    left: 0;
  }
  .pop-mask-view {
    position: absolute;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    z-index: 1;
  }
  
  .pop-view-top {
    position: absolute;
    transform: translateY(-1000%);
    width: 100vw;
    top: 0;
  }
  
  .pop-view-bottom {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute !important;
    transform: translateY(100%);
    bottom: 0;
  }
  
  .pop-view-center {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    transform: scale(0, 0);
  }
  
  .pop-view-left {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    transform: translateX(-1000%);
    left: 0;
  }
  
  .pop-view-right {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    transform: translateX(-1000%);
    right: 0;
  }
  
  .pop-content {
    position: relative;
    z-index: 2;
  }
  .content-center {
    width: 100vw;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  